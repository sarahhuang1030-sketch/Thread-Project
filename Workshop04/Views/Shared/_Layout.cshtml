<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travel Experts</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom Theme CSS - MUST come after Bootstrap -->
    <link rel="stylesheet" href="~/css/custom-theme.css" asp-append-version="true" />

    <!-- Page-specific CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Travel Experts
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Packages" asp-action="Index">Packages</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contacts">Contacts</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {

                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <partial name="_LoginPartial" />
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!--display success message for resetpassword, register and login-->
    @{
        string message = TempData["LoginMessage"] as string
        ?? TempData["RegisterMessage"] as string
        ?? TempData["PasswordResetMessage"] as string;
    }

    @if (!string.IsNullOrEmpty(message))
    {
        <div id="globalAlert" class="alert alert-success text-center m-3">
            @message
        </div>

        <script>
            setTimeout(function () {
                var alertBox = document.getElementById("globalAlert");
                if (alertBox) {
                    alertBox.style.transition = "opacity 0.8s ease";
                    alertBox.style.opacity = "0";
                    setTimeout(() => alertBox.remove(), 800);
                }
            }, 3000);
        </script>
    }
    <!--end displaying success message-->

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-luxury-gradient text-white">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-4">
                    <h5 class="text-gold" style="font-family: 'Playfair Display', serif;">Travel Experts</h5>
                    <p class="mt-3" style="color: var(--te-cream); opacity: 0.9;">
                        Curating extraordinary journeys for discerning travelers since 1995.
                    </p>
                </div>
                <div class="col-md-4">
                    <h6 class="text-gold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a class="text-white text-decoration-none d-block mb-2" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                        <li><a class="text-white text-decoration-none d-block mb-2" asp-area="" asp-controller="Packages" asp-action="Index">Destinations</a></li>
                        <li><a class="text-white text-decoration-none d-block mb-2" asp-area="" asp-controller="Home" asp-action="Contacts">Contacts</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6 class="text-gold mb-3">Contact</h6>
                    <p style="color: var(--te-cream); opacity: 0.9;">
                        Email: info@travelexperts.com<br>
                        Phone: 1-800-TRAVEL-EX
                    </p>
                </div>
            </div>
            <hr style="border-color: rgba(201, 169, 96, 0.3); margin: 2rem 0;">
            <div class="text-center" style="color: var(--te-cream); opacity: 0.8;">
                <p class="mb-0">&copy; @DateTime.Now.Year Travel Experts. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
