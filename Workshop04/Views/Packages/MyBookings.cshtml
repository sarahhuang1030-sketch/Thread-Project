@model IEnumerable<Workshop04.Data.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container mt-4">
    <h1 class="mb-4">My Travel Bookings</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var booking in Model)
            {
                var totalPaid = (booking.Package?.PkgBasePrice ?? 0) * (decimal)(booking.TravelerCount ?? 1);

                <div class="col-12 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0 text-white">@booking.Package?.PkgName</h5>
                                <small class="text-white">Booking #@booking.BookingNo</small>
                            </div>
                            <div class="text-end">
                                <span class="badge bg-success">Confirmed</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="mb-3">
                                        <p class="mb-1">
                                            <i class="bi bi-calendar-event"></i>
                                            <strong>Booked on:</strong>
                                            @booking.BookingDate?.ToString("MMMM dd, yyyy")
                                        </p>
                                        @if (booking.Package?.PkgStartDate.HasValue == true && booking.Package?.PkgEndDate.HasValue == true)
                                        {
                                            <p class="mb-1">
                                                <i class="bi bi-calendar-range"></i>
                                                <strong>Travel Dates:</strong>
                                                @booking.Package.PkgStartDate.Value.ToString("MMM dd, yyyy") -
                                                @booking.Package.PkgEndDate.Value.ToString("MMM dd, yyyy")
                                            </p>
                                        }
                                        <p class="mb-1">
                                            <i class="bi bi-people"></i>
                                            <strong>Travelers:</strong>
                                            @booking.TravelerCount @(booking.TravelerCount == 1 ? "person" : "people")
                                        </p>
                                    </div>

                                    @if (booking.Package?.PackagesProductsSuppliers != null && booking.Package.PackagesProductsSuppliers.Any())
                                    {
                                        <div class="mb-3">
                                            <strong>Package Includes:</strong>
                                            <div class="mt-2">
                                                <ul class="list-unstyled">
                                                    @foreach (var pps in booking.Package.PackagesProductsSuppliers)
                                                    {
                                                        @if (pps.ProductsSupplier?.Product != null)
                                                        {
                                                            <li>
                                                                <i class="bi bi-check-circle text-success"></i>
                                                                @pps.ProductsSupplier.Product.ProdName
                                                            </li>
                                                        }
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    }
                                </div>

                                <div class="col-md-4 text-md-end">
                                    <div class="mb-3">
                                        <p class="mb-1 text-muted">Total Paid</p>
                                        <h3 class="text-success mb-0">$@totalPaid.ToString("N2")</h3>
                                        <small class="text-muted">
                                            ($@booking.Package?.PkgBasePrice.ToString("N2") × @booking.TravelerCount)
                                        </small>
                                    </div>

                                    <div class="d-grid gap-2">
                                        <button type="button" class="btn btn-danger btn-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#cancelModal@(booking.BookingId)">
                                            <i class="bi bi-x-circle"></i> Cancel Booking
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cancel Confirmation Modal -->
                <div class="modal fade" id="cancelModal@(booking.BookingId)" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title text-white">Cancel Booking?</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to cancel this booking?</p>
                                <p><strong>@booking.Package?.PkgName</strong></p>
                                <p class="text-muted">Booking #@booking.BookingNo</p>
                                <p class="text-muted">@booking.TravelerCount @(booking.TravelerCount == 1 ? "traveler" : "travelers")</p>
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle"></i>
                                    <strong>$@totalPaid.ToString("N2")</strong> will be refunded to your wallet.
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Booking</button>
                                <form asp-action="CancelBooking" asp-route-id="@booking.BookingId" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger">Yes, Cancel Booking</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Summary Section -->
        <div class="card bg-light">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <h4>@Model.Count()</h4>
                        <p class="text-muted mb-0">Total Bookings</p>
                    </div>
                    <div class="col-md-4">
                        <h4>$@Model.Sum(b => (b.Package?.PkgBasePrice ?? 0) * (decimal)(b.TravelerCount ?? 1)).ToString("N2")</h4>
                        <p class="text-muted mb-0">Total Spent</p>
                    </div>
                    <div class="col-md-4">
                        <h4>@Model.Count(b => b.Package?.PkgEndDate > DateTime.Now)</h4>
                        <p class="text-muted mb-0">Upcoming Trips</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (TempData["Message"] != null || TempData["CencelBookErrMessage"] != null)
    {
        @* Display error if cancellation failed *@
        @if (TempData["CencelBookErrMessage"] != null)
        {
            <h4 class="text-center text-danger database-error">
                @TempData["CencelBookErrMessage"]
            </h4>
        }

        @* Display error if no connection to database *@
        <h4 class="text-center  @((bool)(TempData["IsError"])! == true ? "text-danger database-error" : "text-success")">
            @TempData["Message"]
        </h4>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
            <h3 class="mt-3">No Bookings Yet</h3>
            <p class="text-muted">You haven't made any travel bookings yet.</p>
            <a asp-action="Index" class="btn btn-primary">
                <i class="bi bi-search"></i> Browse Packages
            </a>
        </div>
    }

    <div class="mt-4 mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Packages
        </a>
    </div>
</div>