@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="register-page">
    <div class="register-container">
        <div class="register-card">
            <div class="register-header">
                <h1 class="register-title">Welcome Back</h1>
                <p class="register-subtitle">Access your travel portfolio</p>
            </div>

            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-group">
                        <label asp-for="Input.Username"></label>
                        <input asp-for="Input.Username" autocomplete="username" aria-required="true" placeholder="Enter your username" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" type="password" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="checkbox-group" style="display: flex; align-items: center; gap: 0.5rem;">
                            <input class="form-check-input" asp-for="Input.RememberMe" type="checkbox" style="width: auto;" />
                            <label asp-for="Input.RememberMe" style="margin-bottom: 0; text-transform: none;">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>

                    <button id="login-submit" type="submit" class="submit-button">Sign In</button>

                    <div class="login-link" style="margin-top: 1.5rem; margin-bottom: 1rem;">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </div>

                    <div class="login-link">
                        Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create Account</a>
                    </div>

                    @* Uncomment if you need email confirmation resend *@
                    @* <div class="login-link" style="margin-top: 0.5rem;">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </div> *@
                </form>
            </section>

            @* External Login Section - Only show if configured *@
            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div style="margin-top: 2rem;">
                    <div class="divider" style="text-align: center; margin: 2rem 0; position: relative;">
                        <span style="background-color: var(--te-deep-navy); padding: 0 1rem; color: var(--te-soft-gray); font-size: 0.9rem; position: relative; z-index: 1;">
                            or continue with
                        </span>
                        <div style="position: absolute; top: 50%; left: 0; right: 0; height: 1px; background-color: rgba(201, 169, 96, 0.2); z-index: 0;"></div>
                    </div>

                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="social-login" style="display: flex; flex-direction: column; gap: 1rem;">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="social-button" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"
                                        style="width: 100%; padding: 1rem; background-color: rgba(250, 247, 242, 0.1); border: 1px solid rgba(201, 169, 96, 0.3); color: var(--te-gold); text-transform: uppercase; letter-spacing: 1px; cursor: pointer; transition: all 0.3s;">
                                    @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}